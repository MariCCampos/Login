<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ConsultaCEP"
             x:Class="ConsultaCEP.MainPage"
             BackgroundImage="flor.jpg">

    <StackLayout 
    VerticalOptions="FillAndExpand" 
    HorizontalOptions="FillAndExpand" 
    Margin="50">

       
        <Entry Placeholder ="E-mail" PlaceholderColor="Black"
           FontAttributes="Bold"
           BackgroundColor="WhiteSmoke"
           TextColor="Black"
           HorizontalTextAlignment="Center"
           SelectionLength="20"
           HorizontalOptions="FillAndExpand"
           VerticalOptions="CenterAndExpand" 
           x:Name="email"/>

        <Entry Placeholder ="Senha" PlaceholderColor="Black"
           FontAttributes="Bold"
           BackgroundColor="WhiteSmoke"
           TextColor="Black"
           HorizontalTextAlignment="Center"
           SelectionLength="20"
           HorizontalOptions="FillAndExpand"
           VerticalOptions="CenterAndExpand"
           x:Name="senha"/>

        <Button Text="Login"
           FontAttributes="Bold"
           BackgroundColor="White"
           VerticalOptions="CenterAndExpand"
           HorizontalOptions="Center"
           Clicked="Logar"/>

    </StackLayout>

</ContentPage>
